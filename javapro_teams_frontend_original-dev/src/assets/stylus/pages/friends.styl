.friends__header {
  display: flex;
  align-items: center;
  margin-bottom: 30px;
}

.friends__title {
  margin-right: 40px;
  font-family: font-exo;
  font-weight: 200;
  font-size: 30px;
  color: #000;
}

.friends__search {
  display: flex;
  align-items: center;
  flex auto
}

.friends__search-icon {
  .simple-svg-wrapper {
    width: 16px;
    height: 16px;
  }

  .simple-svg {
    stroke: #5F5E7A;
    fill: transparent;
  }
}

.friends__search-input {
  font-size: 13px;
  color: #000;
  background-color: transparent;
  cursor: pointer;
  padding: 10px;
  margin-top: 1px;
  display block
  width: 100%

  &::placeholder {
    color: #5F5E7A;
  }
}

.friends__list {
    display: grid;
    grid-row-gap: 20px;
    margin: 0 -10px;
}